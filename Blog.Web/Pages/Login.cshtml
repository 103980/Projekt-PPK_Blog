@page
@model Blog.Web.Pages.LoginModel
@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">


           <h1 class="mb-3 h3">Logowanie</h1>

            <partial name="_Alert">

                <form method="post">

                    <div class="mb-3">
                        <label class="form-label">Nazwa użytkownika</label>
                        <input type="text" class="form-control" asp-for="LoginViewModel.UserName" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Hasło</label>
                        <input type="password" class="form-control" asp-for="LoginViewModel.Password" />
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn bg-dark text-light">Zaloguj</button>
                    </div>

                </form>
        </div>
    </div>
</div>