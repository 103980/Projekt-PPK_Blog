@page
@model Blog.Web.Pages.Admin.Posty.ListModel
@{
}

<div class="bg-primary bg-opacity-10 py-3">
    <div class="container">
        <h1>Wszystkie Posty</h1>
    </div>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Nagłówek</td>
                <td> </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var blogPost in Model.BlogPostList)
            {
                <tr>
                    <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                    <td><a href="/admin/posty/edit/@blogPost.Id">Wyświetl szczegóły</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>