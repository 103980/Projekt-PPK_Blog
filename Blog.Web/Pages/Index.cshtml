@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container col-xxl-8 px-4 py-4">
    <div class="row align-items-center g-4 py-4">
        <div class="col-12 col-lg-6">
            <h1 class="display-4 fw-bold lh-1 mb-2">
                Blog o naszych sąsiadach - Zobacz ich dobre uczynki.
            </h1>
            <p class="lead">Ten blog pokazuje prawdziwe, dobre oblicze naszych sąsiadów. 
                Zobacz i przekonaj się jacy naprawdę są twoi sąsiedzi!
                Chcesz dowiedzieć się więcej? Dołącz do 'Dobry Sąsiad Blog' i co tydzień przeczytaj kolejną pasjonującą historię ze swojej okolicy. </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/3791664/pexels-photo-3791664.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" 
             class="d-block mx-lg-auto img-fluid" width="500" alt="#" />
        </div>
    </div>
</div>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">

            <h3 class="mb-4 display-4">Wasze Historie:</h3>

@if (Model.Blogs != null && Model.Blogs.Any())
{
foreach (var blog in Model.Blogs)
{
    <div class="mb-5 bg-light box-shadow">
        <img src="@blog.FeaturedImageUrl" alt="@blog.Heading" class="mb-2 d-block img-fluid"/>
        <div class="px-3 py-3">
            <h3 class="mb-2">@blog.Heading</h3>
            <p>
                Autor: @blog.Author
                <br/>
                Data opublikowania: @blog.PublishedDate.ToShortDateString()
            </p>
            <p class="mb-2">@blog.ShortDescription</p>
            <a href="/blogs/@blog.UrlHandle" class=" btn btn-dark">Przeczytaj więcej</a>

        </div>
    </div>
}
    
}
        </div>

    </div>
</div>

